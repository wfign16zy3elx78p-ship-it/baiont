#include <iostream>
#include <fstream>
#include <iomanip>
#include <cmath>
using namespace std;

int main() {
    ifstream fin("a.txt");   // đọc từ file a.txt
    ofstream fout("b.txt");  // ghi vào file b.txt

    // Kiểm tra mở file có thành công không
    if (!fin.is_open()) {
        cout << "Khong mo duoc file a.txt!\n";
        return 1;
    }

    double x, y;
    cout << fixed << setprecision(4);  // in 4 chữ số thập phân
    fout << fixed << setprecision(4);  // ghi 4 chữ số thập phân

    cout << "Cac diem va khoang cach tu goc toa do:\n";
    
    while (fin >> x >> y) {
        double d = sqrt(x*x + y*y);
        
        // a) In ra màn hình
        cout << "Diem (" << x << ", " << y << ") -> Khoang cach: " << d << endl;
        
        // b) Ghi khoảng cách vào b.txt (chỉ số d)
        fout << d << endl;
    }

    fin.close();
    fout.close();
    cout << "\nKet qua da duoc ghi vao file b.txt.\n";
    return 0;
}
